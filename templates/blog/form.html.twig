{% extends "base.html.twig" %}

{% block body %}

    <h1>
        {% if editMode %}
            Modification d'un article
        {% else %}
            Création d'un article
        {% endif %}
    </h1>

    {# 1ère méthode #}
    {# {{ form(formArticle) }} #}

    {# 2nd méthode #}
    {# FORM_START & FORM_END permettent de délimiter un formulaire , de modifier ses champs, changer la méthode, ... #}
    {{ form_start(formArticle, {
        attr: {
            novalidate: 'novalidate'
        }
        })
    }}

    {# FORM_WIDGET permet de gérer l'affichage d'un champ #}
    {# FORM_ROW permet de gérer l'afficahge d'un champ et de son label #}
    {{ form_row(formArticle.title, {
                label: "Titre",
                attr: {
                    placeholder: "Titre de l'article"
                }
            }) }}
    {{ form_row(formArticle.content, {
                label: "Contenu",
                attr: {
                    placeholder: "Contenu de l'article"
                }
            }) }}
    {{ form_row(formArticle.imageFile, {
        label: "Ajouter un fichier"
    }) }}

    {{ form_row(formArticle.category, {
        label: "Catégories"
        })
    }}
    
    <button type="submit" class="btn btn-primary mt-2">
    {% if editMode %}
        Modifier
    {% else %}
        Enregistrer
    {% endif %}
    </button>

    {{ form_end(formArticle) }}

{% endblock %}